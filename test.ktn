
define leven ([char] [char] -> int):
  -> first second;
  first length -> rows;
  second length -> columns;

  0 (columns + 1) replicate (rows + 1) replicate

  from (0) to (rows) -> row:
    (row, 0) !!= row

  from (0) to (columns) -> column:
    (0, column) !!= column

  from (1) to (rows) -> row:
    from (1) to (columns) -> distances column:
      first ! (row - 1) -> firstChar;
      second ! (row - 1) -> secondChar;

      distances
      if (firstChar secondChar eqChar):
        distances !! (row - 1, column - 1)
      else:
        (distances !! (row - 1, column))
        (distances !! (row,     column - 1))
        (distances !! (row - 1, column - 1))
        minInt3 (+ 1)
      ((row, column) !!=)
  (!! (rows, columns))

"kitten" "sitting" leven sayInt
"rosettacode" "raisethysword" leven sayInt
